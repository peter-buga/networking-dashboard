{
  "id": null,
  "uid": "network-nodes",
  "title": "Network Nodes Monitoring",
  "description": "Dashboard for monitoring network node notifications, MEP states, and PRF metrics",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "tags": ["network", "nodes", "mep", "prf"],
  "templating": {
    "list": [
      {
        "name": "hostname",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "query": "label_values(network_node_notifications_total, hostname)",
        "refresh": "time",
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "mep_name",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "Prometheus" },
        "query": "label_values(network_mep_octets_passed{hostname=~\"$hostname\"}, mep_name)",
        "refresh": "time",
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Active Network Nodes",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "count(count by (hostname)(network_node_notifications_total))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 2 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Total Notifications (Last 5m)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum(increase(network_node_notifications_total{hostname=~\"$hostname\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "stat",
      "title": "Transaction Operations (Last 5m)",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum(increase(network_node_transaction_operations_total{hostname=~\"$hostname\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "table",
      "title": "Node Status Overview",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_node_status_info{hostname=~\"$hostname\"}",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "__name__": true, "instance": true, "job": true },
            "renameByName": { "hostname": "Node", "status": "Status" }
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Notification Rate by Type",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum by (notification_type)(rate(network_node_notifications_total{hostname=~\"$hostname\"}[1m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Notification Rate by Node",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum by (hostname)(rate(network_node_notifications_total{hostname=~\"$hostname\"}[1m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "MEP Octets Passed (Data Traffic)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_mep_octets_passed{hostname=~\"$hostname\",mep_name=~\"$mep_name\",traffic_type=\"data\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "bytes"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "MEP Octets Passed (OAM Traffic)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_mep_octets_passed{hostname=~\"$hostname\",mep_name=~\"$mep_name\",traffic_type=\"oam\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "bytes"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "MEP Packets Passed (Data Traffic)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_mep_packets_passed{hostname=~\"$hostname\",mep_name=~\"$mep_name\",traffic_type=\"data\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "MEP Packets Passed (OAM Traffic)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_mep_packets_passed{hostname=~\"$hostname\",mep_name=~\"$mep_name\",traffic_type=\"oam\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "table",
      "title": "MEP Status Table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_mep_mask_signal_state_info{hostname=~\"$hostname\",mep_name=~\"$mep_name\"}",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "__name__": true, "instance": true, "job": true, "Value": true },
            "renameByName": { 
              "hostname": "Node", 
              "mep_name": "MEP Name",
              "mask_signal_state": "Signal State"
            }
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "PRF Octets Passed",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_prf_octets_passed{hostname=~\"$hostname\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "bytes"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "PRF Packets Passed",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_prf_packets_passed{hostname=~\"$hostname\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "PRF Pipeline Action Count",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 44 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_prf_pipeline_action_count{hostname=~\"$hostname\"}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "table",
      "title": "PRF Pipeline Status",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 44 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_prf_pipeline_mask_state_info{hostname=~\"$hostname\"}",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "__name__": true, "instance": true, "job": true, "Value": true },
            "renameByName": { 
              "hostname": "Node",
              "prf_name": "PRF Name",
              "pipeline_name": "Pipeline",
              "mask_state": "Mask State"
            }
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Triggered Source Metrics",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 52 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_triggered_source_level{hostname=~\"$hostname\"}",
          "legendFormat": "{{hostname}} - {{source}} -> {{target}} ({{stream}}) - Level"
        },
        {
          "refId": "B",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_triggered_source_session{hostname=~\"$hostname\"}",
          "legendFormat": "{{hostname}} - {{source}} -> {{target}} ({{stream}}) - Session"
        },
        {
          "refId": "C",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "network_triggered_source_seq{hostname=~\"$hostname\"}",
          "legendFormat": "{{hostname}} - {{source}} -> {{target}} ({{stream}}) - Seq"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Transaction Operations by Type",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 60 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum by (operation_type)(rate(network_node_transaction_operations_total{hostname=~\"$hostname\"}[1m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Transaction Operations by Node",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 60 },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum by (hostname)(rate(network_node_transaction_operations_total{hostname=~\"$hostname\"}[1m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth" },
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        }
      }
    }
  ]
}