# Topology Service Environment Configuration

# Django Environment Variables
# Django Secret Key - Generate a new secret key for production
DJANGO_SECRET_KEY=your-production-secret-key-here

# Debug Mode
DJANGO_DEBUG=True

# Allowed Hosts - Comma-separated list of allowed hostnames/IPs
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,topology

# Node styling
TOPOLOGY_NODE_SIZE=2500

# Font sizing
TOPOLOGY_FONT_SIZE_BASE=10
TOPOLOGY_FONT_SIZE_MIN=8
TOPOLOGY_FONT_SIZE_MAX=14

# Label positioning
TOPOLOGY_EDGE_LABEL_OFFSET=0.1
TOPOLOGY_IP_LABEL_DISTANCE=0.2

# Text styling
TOPOLOGY_TEXT_PADDING=0.3

# Layout
TOPOLOGY_FIGURE_MARGIN=0.2

# File paths
DEFAULT_TOPOLOGY_FILE=/app/base_files/testnet.py

# Image generation settings
TOPOLOGY_IMAGE_WIDTH=1400
TOPOLOGY_IMAGE_HEIGHT=500
TOPOLOGY_IMAGE_DPI=200
TOPOLOGY_IMAGE_FORMAT=png